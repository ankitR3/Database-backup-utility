generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String    @id @default(cuid())
  uuid        String    @unique @default(uuid())
  name        String
  email       String    @unique
  username    String?   @unique
  password    String?
  image       String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  backupConfigs BackupConfig[]
}

model Admin {
  id          String    @id     @default(cuid())
  uuid        String    @unique @default(uuid())
  name        String
  email       String    @unique
  username    String    @unique
  password    String
  apiKey      String    @unique
  role        AdminRole @default(admin)
  image       String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("admins")
}

model BackupConfig {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  type        BackupType

  mongoUri    String?
  mongoDbName String?

  pgUri       String?
  pgDbName    String?

  frequency String?
  time String?
  dayOfWeek Int?

  enabled     Boolean   @default(true)
  createdAt   DateTime  @default(now())
}

enum AdminRole {
  admin
  superadmin
}

enum BackupType {
  mongo
  postgres
}