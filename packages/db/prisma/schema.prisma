generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String    @id @default(cuid())
  uuid        String    @unique @default(uuid())
  name        String
  email       String    @unique
  username    String    @unique
  password    String
  image       String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Admin {
  id          String    @id     @default(cuid())
  uuid        String    @unique @default(uuid())
  name        String
  email       String    @unique
  username    String    @unique
  password    String
  apiKey      String    @unique
  role        AdminRole @default(admin)
  image       String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("admins")
}

enum AdminRole {
  admin
  superadmin
}